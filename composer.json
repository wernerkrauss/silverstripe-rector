{
  "name": "wernerkrauss/silverstripe-rector",
  "description": "Rector rules for Silverstripe CMS",
  "type": "rector-extension",
  "license": "MIT",
  "authors": [
    {
      "name": "Werner Krau√ü",
      "email": "werner.krauss@netwerkstatt.at"
    }
  ],
  "require": {
    "php": "^7.4 | ^8",
    "rector/rector": "^2",
    "symplify/rule-doc-generator": "^12.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3"
  },
  "autoload": {
    "psr-4": {
      "Netwerkstatt\\SilverstripeRector\\": "src/",
      "Rector\\":"rules"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Netwerkstatt\\SilverstripeRector\\Tests\\": "tests"
    },
    "classmap": ["stubs"],
    "exclude-from-classmap": [
      "**.php.inc"
    ]
  },
  "scripts": {
    "docs:generate": "@php rule-doc-generator generate --output-file docs/all_rectors_overview.md  --ansi --categorize 2  -- ./src/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
